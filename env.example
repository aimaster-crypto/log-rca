# Flask
DEBUG=1
SECRET_KEY=change-me

# Database (pick one and set DB_URL)
# Postgres example (psycopg v3):
# DB_URL=postgresql+psycopg://user:pass@localhost:5432/appdb
# MySQL example:
# DB_URL=mysql+pymysql://user:pass@localhost:3306/appdb
DB_URL=

# Spring Boot log table/columns
LOG_TABLE=logs
COL_TIMESTAMP=timestamp
COL_LEVEL=level
COL_LOGGER=logger
COL_MESSAGE=message
COL_CORRELATION_ID=correlation_id

# Java code scanning
JAVA_CODE_PATH=./spring-app/
LOG_REGEX=\.(info|error|warn|debug|trace)\s*\((?:.|\n)*?\)
CONTEXT_WINDOW=20
FILE_EXTS=.java,.kt
EXCLUDE_DIRS=.git,node_modules,build,target,out,dist

# Vector store
CHROMA_DIR=./data/chroma
CHROMA_COLLECTION=log_context

# Embeddings
USE_OPENAI_EMBEDDINGS=0
USE_OLLAMA_EMBEDDINGS=1
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.groq.com/openai/v1
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# LLM
LLM_MODEL=meta-llama/llama-4-maverick-17b-128e-instruct
